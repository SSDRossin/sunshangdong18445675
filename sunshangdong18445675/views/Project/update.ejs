<!--update.ejs-->
<form action="/project/update/<%= project.id %>" method="POST">
    <div class="form-group">
        <label>Project Name:</label>
        <input type="text" class="form-control" name="project[name]" value="<%= project.name %>" required>
    </div>
    <div class="form-group">
        <label>Short Description:</label>
        <input type="number" class="form-control" name="project[sdes]" value="<%= project.sdes %>" required>
    </div>
    <div class="form-group">
        <label>Full Description:</label>
        <input type="text" class="form-control" name="project[fdes]" value="<%= project.fdes %>" required>
    </div>
    <div class="form-group">
        <label>Image URL:</label>
        <input type="text" class="form-control" name="project[URL]" value="<%= project.URL %>" required>
    </div>
    <div class="form-group">
        <label>Project Date:</label>
        <input type="text" class="form-control" name="project[date]" value="<%= project.date %>" required>
    </div>
    <div class="form-group">
        <label>Time</label>
        <input type="text" class="form-control" name="project[time]" value="<%= project.time %>" required>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>